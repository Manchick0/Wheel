{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Widget",
  "description": "A Widget within the Wheel",
  "type": "object",
  "properties": {
    "label": {
      "type": ["string", "object"],
      "description": "The label shown to the user when hovered."
    },
    "preview": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "description": "The identifier of the item."
            },
            "count": {
              "type": "integer",
              "description": "The count of the item stack."
            },
            "components": {
             "type": "array",
             "description": "The component map that is to be applied onto the item."
            }
          }
        }
      ],
      "description": "An item that is to be shown on the widget."
    },
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "echo",
              "command",
              "open",
              "sound",
              "clipboard",
              "suggest",
              "link",
              "await"
            ]
          }
        },
        "oneOf": [
          {
            "properties": {
              "type": {
                "const": "open"
              },
              "path": {
                "type": "string",
                "description": "A sub path within the /widgets folder inside a resource-pack."
              }
            }
          },
          {
            "properties": {
              "type": {
                "const": "command"
              },
              "path": {
                "type": "string",
                "description": "A command that is to be run."
              }
            }
          },
          {
            "properties": {
              "type": {
                "const": ""
              },
              "path": {
                "type": "string",
                "description": "A command that is to be run."
              }
            }
          }
        ]
      },
      "description": "The actions performed by the widget."
    }
  },
  "required": ["label", "preview"]
}