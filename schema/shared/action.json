{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/Manchick0/Wheel/master/schema/shared/action.json",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "description": "The type of the action."
    }
  },
  "required": ["type"],
  "oneOf": [
    {
      "properties": {
        "type": {
          "const": "open"
        },
        "path": {
          "type": "string",
          "pattern": "[a-zA-Z0-9_/]*",
          "description": "A sub folder inside the \"widgets\" directory in a resource-pack."
        }
      },
      "required": [
        "path"
      ]
    },
    {
      "properties": {
        "type": {
          "const": "command"
        },
        "command": {
          "type": "string",
          "description": "The command that is to be run"
        }
      },
      "required": [
        "command"
      ]
    },
    {
      "properties": {
        "type": {
          "const": "echo"
        },
        "message": {
          "type": [
            "string",
            "object",
            "array"
          ],
          "description": "A message that will be displayed in the chat"
        },
        "overlay": {
          "type": "boolean",
          "description": "Whether to display in the actionbar instead."
        }
      },
      "required": [
        "message"
      ]
    },
    {
      "properties": {
        "type": {
          "const": "sound"
        },
        "id": {
          "type": "string",
          "description": "The identifier of the sound."
        },
        "pitch": {
          "type": "number",
          "minimum": 0,
          "maximum": 2,
          "description": "The pitch of the sound."
        },
        "volume": {
          "type": "number",
          "minimum": 0,
          "description": "The volume of the sound."
        },
        "stop": {
          "type": "number",
          "minimum": 0,
          "description": "Whether to stop the sound instead. Note, that this will stop all sounds if the \"id\" field isn't present"
        }
      },
      "required": []
    },
    {
      "properties": {
        "type": {
          "const": "clipboard"
        },
        "content": {
          "type": "string",
          "description": "What to copy in the clipboard"
        }
      },
      "required": [
        "content"
      ]
    },
    {
      "properties": {
        "type": {
          "const": "suggest"
        },
        "content": {
          "type": "string",
          "description": "The content that is to be suggested in the chat."
        },
        "cursor": {
          "type": "integer",
          "minimum": 0,
          "description": "The character, the cursor will be moved to."
        }
      },
      "required": [
        "content"
      ]
    },
    {
      "properties": {
        "type": {
          "const": "link"
        },
        "destination": {
          "type": "string",
          "description": "The link that is to be opened. Use \":run\" to open the run directory instead."
        },
        "ignore_confirmation": {
          "type": "boolean",
          "description": "Whether to ignore the confirmation screen."
        }
      },
      "required": [
        "destination"
      ]
    },
    {
      "properties": {
        "type": {
          "const": "await"
        },
        "delay": {
          "type": "integer",
          "minimum": 1,
          "description": "The amount of ticks the action(s) will be delayed for."
        },
        "actions": {
          "type": [
            "object",
            "array"
          ],
          "oneOf": [
            {
              "$ref": "./action.json",
              "description": "An action that is to be delayed."
            },
            {
              "type": "array",
              "items": {
                "$ref": "./action.json",
                "description": "An action entry"
              },
              "description": "An array of actions that are to be delayed."
            }
          ]
        }
      },
      "required": [
        "delay",
        "actions"
      ]
    }
  ]
}